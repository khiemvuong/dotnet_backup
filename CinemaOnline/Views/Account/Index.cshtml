@using BELibrary.Core.Utils
@using CinemaOnline.Handler
@using PagedList.Mvc
@using BELibrary.Entity
@model List<CinemaOnline.Areas.Admin.Models.OrderView>

@{
    ViewBag.Title = "Trang cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var user = CookiesManage.GetUser();
}

<style>

    /* Header Section */
    .inner-header {
        background-size: cover;
        background-position: center;
        color: white;
    }

        .inner-header h2 {
            font-size: 2rem;
            margin: 0;
        }

        .inner-header .breadcrumb {
            background: transparent;
            color: white;
            padding: 0;
            font-size: 0.9rem;
        }

    /* Profile Section */
    .profile-section {
        margin-top: 20px;
    }

    .profile-card {
        background-color: #f5f5f5;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        text-align: center;
    }

    .profile-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        margin: 0 auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .profile-info {
        list-style: none;
        padding: 0;
        margin: 20px 0;
    }

        .profile-info li {
            font-size: 0.95rem;
            margin-bottom: 10px;
        }

    .social-icons {
        margin: 15px 0;
    }

    .social-icon {
        font-size: 1.2rem;
        color: #555;
        margin: 0 5px;
        transition: color 0.3s ease;
    }

        .social-icon:hover {
            color: #007bff;
        }

    /* Transaction History */
    .widget-box {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .widget-header {
        background-color: #007bff;
        color: white;
        padding: 10px 15px;
        font-size: 1.1rem;
        font-weight: bold;
    }

    .transaction-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .transaction-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px;
        border-bottom: 1px solid #f1f1f1;
    }

    .transaction-details {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
    }

    .transaction-item:last-child {
        border-bottom: none;
    }

    .film-info, .time-info, .price-info {
        font-size: 0.95rem;
    }

    .status-info {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        color: white;
        font-size: 1rem;
    }

    .bg-success {
        background-color: #28a745;
    }

    .bg-warning {
        background-color: #ffc107;
    }

    .bg-danger {
        background-color: #dc3545;
    }

</style>
<style>
